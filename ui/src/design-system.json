{
    "designLanguage": {
        "name": "TaskPilot Design System",
        "version": "1.1.0",
        "spacing": {
            "xs": "0.25rem",
            "sm": "0.5rem",
            "md": "1rem",
            "lg": "1.5rem",
            "xl": "2rem",
            "2xl": "3rem",
            "3xl": "4rem"
        },
        "borderRadius": {
            "sm": "0.375rem",
            "md": "0.5rem",
            "lg": "0.75rem",
            "xl": "1rem",
            "2xl": "1.5rem"
        },
        "colors": {
            "primary": {
                "blue": "#3b82f6",
                "green": "#10b981",
                "orange": "#f97316",
                "yellow": "#eab308",
                "purple": "#8b5cf6"
            },
            "accent": {
                "green": "#10b981",
                "orange": "#f97316",
                "yellow": "#eab308",
                "purple": "#8b5cf6",
                "blue": "#3b82f6",
                "gradientBlueGreen": "linear-gradient(135deg, #3b82f6, #10b981)",
                "gradientBlueGreenFaded": "linear-gradient(135deg, rgba(59, 130, 246, 0.1), rgba(16, 185, 129, 0.1))"
            },
            "neutral": {
                "50": "#f9fafb",
                "100": "#f3f4f6",
                "200": "#e5e7eb",
                "300": "#d1d5db",
                "400": "#9ca3af",
                "500": "#6b7280",
                "600": "#4b5563",
                "700": "#374151",
                "800": "#1f2937",
                "900": "#111827"
            }
        },
        "typography": {
            "title": {
                "fontSize": "1.125rem",
                "fontWeight": "600",
                "lineHeight": "1.5"
            },
            "tab": {
                "base": "flex items-center justify-center gap-2 rounded-lg px-4 py-2.5 text-sm font-medium transition-all duration-200",
                "active": "bg-background shadow-sm",
                "inactive": "text-muted-foreground hover:bg-background/50"
            },
            "tooltip": {
                "fontSize": "1.125rem",
                "fontWeight": "600",
                "lineHeight": "1.5"
            },
            "subtitle": {
                "fontSize": "0.875rem",
                "fontWeight": "400",
                "lineHeight": "1.4",
                "color": "neutral.500"
            },
            "caption": {
                "fontSize": "0.75rem",
                "fontWeight": "400",
                "lineHeight": "1.3",
                "color": "neutral.400"
            }
        },
        "shadows": {
            "sm": "0 1px 2px 0 rgba(0, 0, 0, 0.05)",
            "md": "0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06)",
            "lg": "0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05)"
        },
        "effects": {
            "glass": {
                "base": "rgba(255, 255, 255, 0.8)",
                "border": "rgba(255, 255, 255, 0.25)",
                "shadow": "0 4px 30px rgba(0, 0, 0, 0.1)",
                "blur": "blur(8px)",
                "backdropFilter": "saturate(180%) blur(8px)"
            },
            "gradientBorder": {
                "base": "linear-gradient(135deg, rgba(59, 130, 246, 0.5), rgba(16, 185, 129, 0.5))"
            }
        },
        "components": {
            "card": {
                "glass": {
                    "background": "rgba(255, 255, 255, 0.8)",
                    "backdropFilter": "saturate(180%) blur(8px)",
                    "boxShadow": "0 4px 30px rgba(0, 0, 0, 0.1)",
                    "border": "1px solid rgba(255, 255, 255, 0.3)"
                },
                "base": {
                    "backgroundColor": "white",
                    "borderRadius": "xl",
                    "gradientBorder": {
                        "background": "linear-gradient(135deg, rgba(59, 130, 246, 0.5), rgba(16, 185, 129, 0.5))",
                        "padding": "1px"
                    },
                    "padding": "lg",
                    "shadow": "md",
                    "border": "1px solid neutral.200"
                },
                "hover": {
                    "transform": "translateY(-2px)",
                    "shadow": "lg",
                    "transition": "all 0.2s ease"
                }
            },
            "listItem": {
                "base": {
                    "backgroundColor": "white",
                    "borderRadius": "lg",
                    "padding": "md",
                    "border": "1px solid neutral.200",
                    "marginBottom": "sm"
                },
                "hover": {
                    "backgroundColor": "neutral.50",
                    "transition": "background-color 0.15s ease"
                },
                "layout": {
                    "display": "flex",
                    "alignItems": "center",
                    "justifyContent": "space-between"
                }
            },
            "accentBar": {
                "width": "4px",
                "height": "100%",
                "borderRadius": "sm",
                "marginRight": "md",
                "variants": {
                    "green": {
                        "backgroundColor": "accent.green"
                    },
                    "orange": {
                        "backgroundColor": "accent.orange"
                    },
                    "yellow": {
                        "backgroundColor": "accent.yellow"
                    },
                    "purple": {
                        "backgroundColor": "accent.purple"
                    },
                    "blue": {
                        "backgroundColor": "accent.blue"
                    }
                }
            },
            "iconContainer": {
                "base": {
                    "width": "2.5rem",
                    "height": "2.5rem",
                    "borderRadius": "lg",
                    "display": "flex",
                    "alignItems": "center",
                    "justifyContent": "center",
                    "marginRight": "md"
                },
                "variants": {
                    "light": {
                        "backgroundColor": "neutral.100"
                    },
                    "primary": {
                        "backgroundColor": "accent.blue",
                        "color": "white"
                    }
                }
            },
            "button": {
                "primary": {
                    "background": "linear-gradient(135deg, #3b82f6, #10b981)",
                    "text": "#ffffff",
                    "hover": {
                        "background": "linear-gradient(135deg, #2563eb, #059669)",
                        "transform": "translateY(-1px)",
                        "boxShadow": "0 4px 12px rgba(59, 130, 246, 0.2)"
                    },
                    "active": {
                        "background": "linear-gradient(135deg, #1d4ed8, #047857)",
                        "transform": "translateY(0)"
                    },
                    "padding": "sm md",
                    "borderRadius": "md",
                    "fontSize": "0.875rem",
                    "fontWeight": "500",
                    "border": "none",
                    "cursor": "pointer"
                },
                "secondary": {
                    "backgroundColor": "white",
                    "color": "neutral.700",
                    "padding": "sm md",
                    "borderRadius": "md",
                    "fontSize": "0.875rem",
                    "fontWeight": "500",
                    "border": "1px solid neutral.300",
                    "cursor": "pointer"
                }
            }
        },
        "patterns": {
            "membershipCard": {
                "structure": [
                    {
                        "element": "container",
                        "style": "components.listItem.base",
                        "children": [
                            {
                                "element": "accentBar",
                                "style": "components.accentBar",
                                "variant": "dynamic"
                            },
                            {
                                "element": "content",
                                "style": {
                                    "flex": "1",
                                    "minWidth": "0"
                                },
                                "children": [
                                    {
                                        "element": "title",
                                        "style": "typography.title"
                                    },
                                    {
                                        "element": "subtitle",
                                        "style": "typography.subtitle"
                                    }
                                ]
                            },
                            {
                                "element": "action",
                                "style": {
                                    "marginLeft": "md"
                                },
                                "children": [
                                    {
                                        "element": "icon",
                                        "style": {
                                            "color": "neutral.400"
                                        }
                                    }
                                ]
                            }
                        ]
                    }
                ]
            },
            "workspaceCard": {
                "structure": [
                    {
                        "element": "container",
                        "style": "components.card.base",
                        "children": [
                            {
                                "element": "header",
                                "style": {
                                    "display": "flex",
                                    "alignItems": "center",
                                    "marginBottom": "lg"
                                },
                                "children": [
                                    {
                                        "element": "icon",
                                        "style": "components.iconContainer.base"
                                    },
                                    {
                                        "element": "titleGroup",
                                        "children": [
                                            {
                                                "element": "title",
                                                "style": "typography.title"
                                            },
                                            {
                                                "element": "subtitle",
                                                "style": "typography.subtitle"
                                            }
                                        ]
                                    }
                                ]
                            },
                            {
                                "element": "content",
                                "style": {
                                    "marginBottom": "lg"
                                }
                            },
                            {
                                "element": "footer",
                                "style": {
                                    "display": "flex",
                                    "justifyContent": "space-between",
                                    "alignItems": "center"
                                }
                            }
                        ]
                    }
                ]
            }
        },
        "animations": {
            "cardHover": {
                "transform": "translateY(-2px)",
                "transition": "all 0.2s cubic-bezier(0.4, 0, 0.2, 1)"
            },
            "fadeIn": {
                "opacity": "0 to 1",
                "duration": "0.3s",
                "easing": "ease-out"
            },
            "slideUp": {
                "transform": "translateY(20px) to translateY(0)",
                "opacity": "0 to 1",
                "duration": "0.4s",
                "easing": "cubic-bezier(0.4, 0, 0.2, 1)"
            }
        }
    }
}