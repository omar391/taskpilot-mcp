{
  "name": "taskpilot",
  "version": "0.1.0",
  "description": "A Model Context Protocol server",
  "private": true,
  "type": "module",
  "bin": {
    "taskpilot": "./build/index.js"
  },
  "files": [
    "build"
  ],
  "scripts": {
    "build": "tsc && cp -r src/data build/ && cp src/database/schema.sql build/database/ && node -e \"require('fs').chmodSync('build/index.js', '755')\"",
    "prepare": "bun run build",
    "watch": "tsc --watch",
    "lint": "tsc --noEmit",
    "inspector": "bunx @modelcontextprotocol/inspector build/index.js",
    "inspector:sse": "bunx @modelcontextprotocol/inspector http://localhost:3001/sse",
    "start:sse": "bun run build && node build/index.js --sse --port=3001",
    "dev": "bun run watch",
    "start": "bun run build && node build/index.js",
    "ui:dev": "cd ui && bun run dev",
    "ui:build": "cd ui && bun run build",
    "ui:lint": "cd ui && bun run lint",
    "ui:preview": "cd ui && bun run preview",
    "ui:install": "cd ui && bun install",
    "dev:ui": "cd ui && bun run dev",
    "dev:server": "bun run watch",
    "dev:all": "concurrently \"bun run dev:server\" \"bun run dev:ui\"",
    "install:all": "bun install && cd ui && bun install"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "0.6.0",
    "@types/uuid": "^10.0.0",
    "express": "^5.1.0",
    "sqlite3": "^5.1.7",
    "uuid": "^11.1.0",
    "zod": "^3.25.74"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/node": "^20.19.4",
    "concurrently": "^9.2.0",
    "typescript": "^5.3.3"
  }
}
