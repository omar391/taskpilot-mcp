{
  "name": "taskpilot",
  "version": "0.1.0",
  "description": "A Model Context Protocol server",
  "private": true,
  "type": "module",
  "bin": {
    "taskpilot": "./build/index.js"
  },
  "files": [
    "build"
  ],
  "scripts": {
    "build": "tsc && cd ui && bun run build && node -e \"require('fs').chmodSync('../build/index.js', '755')\"",
    "dev": "npx tsx --watch src/index.ts",
    "serve": "node build/index.js --port=8989"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "0.6.0",
    "@types/uuid": "^10.0.0",
    "better-sqlite3": "^12.2.0",
    "drizzle-orm": "^0.44.2",
    "express": "^5.1.0",
    "sqlite3": "^5.1.7",
    "uuid": "^11.1.0",
    "zod": "^3.25.74"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/express": "^5.0.3",
    "@types/node": "^20.19.4",
    "concurrently": "^9.2.0",
    "drizzle-kit": "^0.31.4",
    "tsx": "^4.20.3",
    "typescript": "^5.3.3"
  }
}
